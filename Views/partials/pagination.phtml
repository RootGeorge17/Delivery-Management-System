<!-- Pagination -->
<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <?php if ($view->currentPage > 1): ?>
                <li class="page-item">
                    <a class="page-link" href="?page=<?php echo $view->currentPage - 1; ?>"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo; Previous</span>
                    </a>
                </li>
            <?php endif; ?>

            <?php for ($i = 1; $i <= $view->totalPages; $i++): ?>
                <li class="page-item <?php echo ($i == $view->currentPage) ? 'active' : ''; ?>">
                    <a class="page-link" href="?page=<?php echo $i; ?>"><?php echo $i; ?></a>
                </li>
            <?php endfor; ?>

            <?php if ($view->currentPage < $view->totalPages): ?>
                <li class="page-item">
                    <a class="page-link" href="?page=<?php echo $view->currentPage + 1; ?>"
                       aria-label="Next">
                        <span aria-hidden="true">Next &raquo;</span>
                    </a>
                </li>
            <?php endif; ?>
        </ul>
    </nav>
</div>