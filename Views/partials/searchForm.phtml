<!-- Search form -->
<div class="col-md-3 mb-1">
    <form action="/" method="POST">
        <div class="input-group">
            <input type="text" class="form-control" id="searchInput" name="search" placeholder="Search for Parcel">
            <div class="input-group-append">
                <button class="btn btn-outline-dark" type="submit">Search</button>
            </div>
        </div>
        <!-- Labels and checkboxes -->
        <div class="mt-2">
            <div class="d-flex flex-wrap">
                <div class="col-sm-6 col-md-3 mb-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="notRobot1" name="notRobot1" value="notRobot">
                        <label class="form-check-label" for="notRobot1">Search by ID</label>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3 mb-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="notRobot2" name="notRobot2" value="notRobot">
                        <label class="form-check-label" for="notRobot2">Search by Recipient Name</label>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3 mb-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="notRobot3" name="notRobot3" value="notRobot">
                        <label class="form-check-label" for="notRobot3">Search by Postcode</label>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3 mb-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="notRobot4" name="notRobot4" value="notRobot">
                        <label class="form-check-label" for="notRobot4">Search by Address</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
